<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">


    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/map_tv_recycle_item_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/map_selector_symbol"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textAlignment="center"
        android:textColor="@color/map_text_symbol"
        android:textSize="@dimen/map_search_edit_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map_iv_recycle_item_hot"
        android:layout_width="22dp"
        android:layout_height="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map_ic_hot"
        app:layout_constraintBottom_toTopOf="@id/map_tv_recycle_item_symbol"
        app:layout_constraintRight_toRightOf="@id/map_tv_recycle_item_symbol"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>